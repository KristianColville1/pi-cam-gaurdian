[Unit]
Description=Backend Node.js Service
After=network.target

[Service]
Type=simple
User=ubuntu
WorkingDirectory=/home/ubuntu/pi-guardian/backend
ExecStart=/usr/bin/node /home/ubuntu/pi-guardian/backend/src/server.js
Restart=always
RestartSec=5
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
